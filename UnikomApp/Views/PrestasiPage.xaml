        <ListBox x:Name="listPrestasi" Margin="0,108,0,2" ItemsSource="{Binding PrestasiCollection}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                    <Grid Tag="{Binding id_prestasi}">                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding tahun_prestasi}" Grid.Column="0" Margin="30,0,0,0" FontSize="30" FontWeight="Bold"/>
                        <TextBlock TextWrapping="Wrap" Text="{Binding judul_prestasi}" Grid.Column="1" Margin="10,0,30,0" FontSize="20" />
                    </Grid>
                        <Grid Margin="0,40,0,0"></Grid>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <UnikomApp:NavDrawer x:Name="NavDrawer" HorizontalAlignment="Left" Margin="-400,0,0,0">
            <UnikomApp:NavDrawer.RenderTransform>
                <CompositeTransform x:Name="NavDrawTransform" />
            </UnikomApp:NavDrawer.RenderTransform>
            <toolkit:GestureService.GestureListener>
                <toolkit:GestureListener
                DragDelta="GestureListener_DragDelta"
